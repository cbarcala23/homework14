<div class="container">
	<div class="row">
		<div class="col-md-12 text-center" id="top-bar">
			<img src="/assets/images/burger.png" alt="burger" />
			<h1> Steal The Burger! </h1>
		</div>
		<div class="col-md-6 text-center" class="task">
			<div class="row">
				<h2>Burgers Ordered</h2>
				{{#each burger_data}}
				{{#unless this.devoured}}
				<div class="col-md-9 text-center" id="pre">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
					<!-- {{this.Date}} -->
				</div>
				<div class="col-md-3 text-center">
					<form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-default" id="burgbut">Steal it!</button>
					</form>
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center" class="task">
			<h2>Burgers Stolen</h2>
			{{#each burger_data}}
			{{#if this.devoured}}
			<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly>
			{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-md-12 text-center enter_section">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">ORDER</button>
			</form>
			<p>Type the name of the burger you want to Steal! Click the "ORDER" button. But beware the Hamburgler!</p>
		</div>
	</div>
</div>